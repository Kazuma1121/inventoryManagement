<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1" >

    <TableRow android:background="#003399" >

        <TextView
            android:layout_marginLeft="5dp"
            android:text="@string/tv_title1"
            android:textColor="#FFFFFF"
            android:layout_span="2" />
        <TextView
            android:layout_marginRight="5dp"
            android:text="@string/tv_title2"
            android:textColor="#FFFFFF" />
    </TableRow>
    <TableRow>
        <CheckBox android:text="@string/tv_kenroku" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_dot" />
        <EditText android:inputType="number" />

    </TableRow>
    <TableRow>
        <CheckBox android:text="@string/tv_21mu" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_dot" />
        <EditText android:inputType="number" />
    </TableRow>
    <TableRow>
        <CheckBox android:text="@string/tv_ohumi" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_dot" />
        <EditText android:inputType="number" />
    </TableRow>
    <TableRow>
        <CheckBox android:text="@string/tv_higa" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_dot" />
        <EditText android:inputType="number" />
    </TableRow>
    <TableRow>
        <CheckBox android:text="@string/tv_buke" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_dot" />
        <EditText
            android:inputType="number" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入力してください"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </TableRow>

</TableLayout>